import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class RentalKendaraanApp {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        String[] nomorTNKB = {"IS 4567 YV", "IN 4511 VS", "IN 1453 AA", "AB 4321 A", "B 1234 AG"};
        String[] namaKendaraan = {"Honda Beat", "Honda Vario", "Toyota Yaris", "Toyota Innova", "Toyota Avanza"};
        String[] jenisKendaraan = {"Motor", "Motor", "Mobil", "Mobil", "Mobil"};
        int[] tahunKendaraan = {2017, 2018, 2022, 2019, 2021};
        double[] biayaSewaPerJam = {25000, 25000, 40000, 40000, 40000}; // Updated biaya sewa per jam

        List<String> nomorTNKBTransaksi = new ArrayList<>();
        List<String> namaKendaraanTransaksi = new ArrayList<>();
        List<String> namaPeminjamTransaksi = new ArrayList<>();
        List<Integer> lamaPinjamTransaksi = new ArrayList<>();
        List<Double> totalBiayaTransaksi = new ArrayList<>();

        boolean exit = false;
        while (!exit) {
            System.out.println("\nMenu:");
            System.out.println("1. Daftar Kendaraan");
            System.out.println("2. Peminjaman");
            System.out.println("3. Tampilkan Seluruh Transaksi");
            System.out.println("4. Urutkan Transaksi (berdasarkan nomor TNKB)");
            System.out.println("5. Keluar");
            System.out.print("Pilih (1-5): ");
            int choice = input.nextInt();
            input.nextLine(); 
            switch (choice) {
                case 1:
                    System.out.println("\nDaftar Kendaraan Rental Serba Serbi:");
                    System.out.println("Nomor TNKB | Nama Kendaraan | Jenis | Tahun | Biaya Sewa Perjam");
                    for (int i = 0; i < nomorTNKB.length; i++) {
                        System.out.printf("%-10s | %-15s | %-5s | %-4d | %.0f%n",
                                nomorTNKB[i], namaKendaraan[i], jenisKendaraan[i], tahunKendaraan[i], biayaSewaPerJam[i]);
                    }
                    break;
                case 2:
                    System.out.println("Masukkan Data Peminjaman");
                    System.out.print("Masukkan Nama Peminjam: ");
                    String namaPeminjam = input.nextLine();
                    System.out.print("Masukkan Nomer TNKB: ");
                    String nomorTNKBInput = input.nextLine();
                    System.out.print("Masukkan Lama Pinjam (dalam jam): ");
                    int lamaPinjam = input.nextInt();
                    input.nextLine(); 
                    System.out.print("Apakah Member (ya/tidak): ");
                    String isMember = input.nextLine();

                    int index = -1;
                    for (int i = 0; i < nomorTNKB.length; i++) {
                        if (nomorTNKB[i].equalsIgnoreCase(nomorTNKBInput)) {
                            index = i;
                            break;
                        }
                    }

                    if (index == -1) {
                        System.out.println("TNKB tidak ditemukan. Transaksi tidak dapat diproses.");
                    } else {
                        boolean[] isRented = {false, false, false, false, false}; 
                        if (isRented[index]) {
                            System.out.println("Tidak bisa diproses, kendaraan sudah dipinjam orang lain");
                        } else {
                            double biayaSewa = biayaSewaPerJam[index] * lamaPinjam;
                            if (isMember.equalsIgnoreCase("ya")) {
                                biayaSewa -= 25000; 
                            }
                            if (lamaPinjam >= 48 && lamaPinjam <= 78) {
                                biayaSewa *= 0.9; 
                            } else if (lamaPinjam > 78) {
                                biayaSewa *= 0.8; 
                            }

                            isRented[index] = true;

                            nomorTNKBTransaksi.add(nomorTNKB[index]);
                            namaKendaraanTransaksi.add(namaKendaraan[index]);
                            namaPeminjamTransaksi.add(namaPeminjam);
                            lamaPinjamTransaksi.add(lamaPinjam);
                            totalBiayaTransaksi.add(biayaSewa);

                            System.out.println("\nTransaksi Berhasil!");
                            System.out.println("Nama Peminjam: " + namaPeminjam);
                            System.out.println("Nama Kendaraan: " + namaKendaraan[index]);
                            System.out.println("Lama Pinjam: " + lamaPinjam + " jam");
                            System.out.printf("Total Biaya: %.0f%n", biayaSewa);
                        }
                    }
                    break;
                case 3:
                    System.out.println("\nDaftar Transaksi Peminjaman Rental Serba Serbi:");
                    System.out.println("| No TNKB | Nama Barang | Nama Peminjam | Lama Pinjam | Total Biaya");
                    for (int i = 0; i < nomorTNKBTransaksi.size(); i++) {
                        System.out.printf("| %-8s | %-12s | %-13s | %-11d | %.0f%n",
                                nomorTNKBTransaksi.get(i), namaKendaraanTransaksi.get(i), namaPeminjamTransaksi.get(i),
                                lamaPinjamTransaksi.get(i), totalBiayaTransaksi.get(i));
                    }

                    double totalPendapatan = 0;
                    for (double biaya : totalBiayaTransaksi) {
                        totalPendapatan += biaya;
                    }
                    System.out.printf("\nTOTAL PENDAPATAN RENTAL SERBA SERBI: %.0f%n", totalPendapatan);
                    break;
                case 4:
                    System.out.println("Fitur urutkan transaksi belum diimplementasikan.");
                    break;
                case 5:
                    exit = true;
                    System.out.println("Terima kasih telah menggunakan aplikasi kami!");
                    break;
                default:
                    System.out.println("Pilihan tidak valid. Silakan pilih 1-5.");
            }
        }
    }
}
